@model IEnumerable<DataTransferObject.Customer.CostumerListingDto>


<table class="table table-bordered table-hover table-striped" id="customer">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BillNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BRAND)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MODEL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FAULT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isDelivered)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BillNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BRAND)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MODEL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FAULT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mobile)
                </td>
                <td class="text-center">
                    @Html.Raw(item.isDelivered.Replace("\r\n", "<br />"))
                    @*@Html.DisplayFor(modelItem => item.isDelivered)*@
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCostumer", new { id = item.id }) |
                    <a href="javascript:void(0);" title="Delete Customer" onclick="Customer.initDeleteCustomer(@item.id);">Delete</a> |
                    @Html.ActionLink("Print Bill", "PrintBill",new { id=item.id})
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#customer').DataTable({
            aaSorting: []
        });
    });
</script>
















